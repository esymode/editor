    "rollup-plugin-terser": "^5.1.3",
    "serve": "^11.2.0",
    "style-loader": "^1.1.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslib": "1.10.0",
    "typescript": "^3.7.4",
    "typescript-styled-plugin": "^0.15.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@types/semver": "^6.2.0",
