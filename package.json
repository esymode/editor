{
  "name": "@esymode/editor",
  "devDependencies": {
    "@types/react": "16.8.24",
    "@types/react-dom": "16.9.4",
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.27.5",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "serve": "^11.2.0",
    "typescript-styled-plugin": "^0.15.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.2",
    "tslib": "1.10.0"
  },
  "dependencies": {
    "emotion": "^10.0.23",
    "monaco-editor": "^0.18.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "ts-binary-types": "^0.8.0"
  },
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve dist",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
