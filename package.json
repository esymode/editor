    "ts-binary-types": "^0.8.0",
    "ts-union": "^2.1.1"
  },
  "scripts": {
    "build": "npx rollup -c",
    "watch": "npx rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve dist",
    "delete-js-maps": "node scripts/delete_js_maps.js",
    "build-monaco-workers": "webpack --config webpack.config.monaco-workers.js --progress",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
